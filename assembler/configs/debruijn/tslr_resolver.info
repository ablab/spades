ts_res
{
	;Dataset configs

		;TSLR leftover
		read_cloud_dataset  ""

		;remove this
		library_type tenx

	;Barcode index construction configs

		;Barcodes are counted on the last edge_tail_len nucleotides of the edge
		edge_tail_len 100000000
		;Edge will be split up to segments of length frame_size
		frame_size 500

	;Filtering configs

		;edges with less than trimming_threshold barcodes will be deleted
		trimming_threshold 10

		;clouds further than gap_threshold from the end\beginning of the edge will be deleted
		gap_threshold 100000000

	;General repeat resolution configs

		;threshold on (intersection) / (number of barcodes on second edge)
		;edge should pass this threshold to become candidate
		diff_threshold 0.75

		;threshold on barcode coverage difference
		;first_barcodes / second_barcodes > barcode_number_threshold and
		;second_barcodes / first_barcodes > barcode_number_threshold
		barcode_number_threshold 0.2

		;Any candidate edge should be no further in graph. 
		;In other words, that is the maximum size of resolvable repeat.
		distance_bound  30000

		;length threshold for reliable edges
		edge_length_threshold  3000

		;Read cloud clustering threshold
		distance 5000

		;Average length of read cloud fragment
		fragment_len 50000

		topsort_bound 5000

	;Configs for 10X repeat resolution
		read_cloud_resolution_on true
	tenx_resolver
	{
		tail_threshold 25000
		max_initial_candidates 10
		internal_gap_threshold 6000
		absolute_barcode_threshold 1
		initial_abundancy_threshold 3
		middle_abundancy_threshold 2
		topology_filter_on true
	}

	statistics
	{
		;Genome file
		genome_path ""

		;Baseline SPAdes contigs
		base_contigs_path ""

		;CloudSPAdes contigs
		cloud_contigs_path ""
	}

	long_edge_length_upper_bound 20000
	long_edge_length_lower_bound 5000

	gap_closer_connection_score_threshold 2.0

	scaffold_polisher {
		share_threshold 0.1
		read_count_threshold 2
		max_scaffold_distance 4
		path_cluster_linkage_distance 2500
		path_cluster_min_reads 1
		path_cluster_score_threshold 10.0
	}

	scaffold_graph_construction {
		count_threshold 2
		score_threshold 3.0
		connection_score_threshold 1.5
	    connection_length_threshold 50
	    connection_count_threshold 1
	    initial_distance 80000
	    split_strictness 0.85
	    transitive_distance_threshold 3
	    path_scaffolder_tail_threshold 20000
	    path_scaffolder_count_threshold 3
	    min_edge_length_for_barcode_collection 1000
	}

	path_scaffolding_on true
	debug_mode false
	save_initial_graph true
}
