ts_res
{
	tslr_barcode_dataset  /home/itolstoganov/tslr_project/resolver_test/mock/data/truspades_dataset/dataset.info

	library_type tslr

	;length threshold for reliable edges
	len_threshold  500

	;Average length of TSLR fragment
	fragment_len 10000

	;edges with less than trimming threshold barcodes will be deleted
	trimming_threshold 3

	;threshold on (intersection) / (number of barcodes on second edge)
	;edge should pass this threshold to become candidate
	diff_threshold 0.75

	;threshold on barcode coverage difference
	;first_barcodes / second_barcodes > barcode_number_threshold and
	;second_barcodes / first_barcodes > barcode_number_threshold
	barcode_number_threshold 0.2

	;Any candidate edge should be no further in graph. 
	;In other words, that is the maximum size of resolvable repeat.
	distance_bound 7000

	;Barcodes are counted on the last edge_tail_len nucleotides of the edge
	edge_tail_len 500

	topsort_bound 5000
	debug_construction false
	join_paths true
	ideal_reads false

	abs_threshold 0.1  ;deprecated
	reference_cov  38  ;deprecated
}